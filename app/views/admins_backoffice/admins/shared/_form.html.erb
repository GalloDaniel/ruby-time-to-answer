<div class="row" style="justify-content: center">
  <div class="col-sm">
    <h1> <%= "#{action_message} Administrador" %> </h1>
      <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
        <div class="row" style="width: 100%">
          <% if @admin.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <ul>
                <% @admin.errors.full_messages.each do |message| %>
                  <li> <%= message %> </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row" style="width: 100%">
            <div class="col-md-3">
                <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <%= form.label :password %>
                <%= form.text_field :password, class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.text_field :password_confirmation, class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <div class="col-md-1">
              <div class="form-group">
                <label>&nbsp;</label>
                <%= form.submit "Salvar", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%= link_to 'Voltar', admins_backoffice_admins_path, class: "btn btn-primary" %>
  </div>
</div>

