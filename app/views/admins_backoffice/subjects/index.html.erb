<div class="card shadow mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Listando Assuntos/Áreas</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Descrição</th>
            <th>
              <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle btn-sm" do %>
                <i class="fa fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>              
        <tbody>
          <% @subjects.each do |subject| %>
          <tr>
            <td> <%= subject.id %> </td>
            <td> <%= subject.description %> </td>
            <td style="width: 100px;"> 
              <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle btn-sm" do %>
                <i class="far fa-edit"></i>
              <% end %>
              <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir este assunto?"} do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr> 
          <% end %>                 
        </tbody>
      </table>  
      <div class="justify-content-center">
        <%= paginate @subjects %>
      </div>
    </div>
  </div>
</div>
