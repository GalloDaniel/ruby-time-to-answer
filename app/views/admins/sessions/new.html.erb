<div class="row justify-content-center">

    <div class="col-xl-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-xl">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
                            </div>
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                                <div class="form-group">
                                  <%= f.email_field :email, autofocus: true, class: "form-control form-control-user", placeholder: "Entre com seu e-mail" %>
                                </div>
                                <div class="form-group">
                                  <%= f.password_field :password, placeholder: "current-password", class: "form-control form-control-user" %>
                                </div>

                                <% if devise_mapping.rememberable? %>
                                  <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                      <%= f.check_box :remember_me, class: "custom-control-input" %>
                                      <%= f.label :remember_me, class: "custom-control-label" %>
                                    </div>
                                  </div>
                                <% end %>
                                <%= f.submit "Entrar", class: "btn btn-primary btn-user btn-block", style: "border-radius: 10rem;" %>
                            <% end %>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>